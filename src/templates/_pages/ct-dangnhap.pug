section.breadcrumb-wrap
	.container
		ol.breadcrumb
			li
				a(href="#")
					span Trang chủ
			li
				a(href="#")
					span Đăng nhập
section.login-page
	.container
		.login-panel
			.login-banner.text-center
				img(src="img/logobg.png", alt="")
			.form-wrap
				.form-group
					label Email
					input(type="text" placeholder="Địa chỉ email")
				.form-group
					label Mật khẩu
					input(type="text" placeholder="Mật khẩu")
				.checkbox.remember-pw
					input#rememberpw(type="checkbox", name="rmbpw")
					label(for="rememberpw") Lưu mật khẩu
				.frm-btn
					input(type="submit", value="Đăng nhập")
				.form-group
					a.form-link(href="#!") Quên mật khẩu?
					a.form-link(href="#!") Đăng ký
			.social-login
				ul
					li
						a.facebook(href="#!") <i class="fa fa-facebook" aria-hidden="true"></i>
							span Đăng nhập bằng Facebook
					li
						a.google(href="#!") <i class="fa fa-google-plus" aria-hidden="true"></i>
							span Đăng nhập bằng Google
